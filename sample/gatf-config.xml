<gatf-execute-config>
	<authEnabled>true</authEnabled>
	<authExtractAuth>token,json,token,queryparam</authExtractAuth>
	<authUrl>api/rest/auth/loginh</authUrl>
	<authParamsDetails>username,header,password,header</authParamsDetails>
	<baseUrl>http://localhost:8081/sampleApp</baseUrl>
	<enabled>true</enabled>
	<outFilesDir>out</outFilesDir>
	<testCaseDir>data</testCaseDir>
	<httpRequestTimeout>100000</httpRequestTimeout>
	<testCaseHooksPaths>
		<testCaseHooksPath>com.*</testCaseHooksPath>
	</testCaseHooksPaths>
	<concurrentUserSimulationNum>1</concurrentUserSimulationNum>
	<concurrentUserRampUpTime>5000</concurrentUserRampUpTime>
	<simulationUsersProviderName>file-auth-provider</simulationUsersProviderName>
	<compareEnabled>false</compareEnabled>
	<loadTestingEnabled>false</loadTestingEnabled>
	<loadTestingTime>40000</loadTestingTime>
	<loadTestingReportSamples>6</loadTestingReportSamples>
	<debugEnabled>true</debugEnabled>
	<wsdlLocFile>wsdl-locations.csv</wsdlLocFile>
	<gatfTestDataConfig>
		<compareEnvBaseUrls>
			<string>http://localhost:8081/sampleApp</string>
		</compareEnvBaseUrls>
		<globalVariables>
			<gvar1>gvalue</gvar1>
		</globalVariables>
		<dataSourceList>
			<gatf-testdata-source>
				<dataSourceName>mongodb-source</dataSourceName>
				<dataSourceClass>com.gatf.executor.dataprovider.MongoDBTestDataSource</dataSourceClass>
				<args>
					<arg>localhost</arg>
					<arg>27017</arg>
					<arg>globaldb</arg>
				</args>
			</gatf-testdata-source>
			<gatf-testdata-source>
				<dataSourceName>database-source</dataSourceName>
				<dataSourceClass>com.gatf.executor.dataprovider.DatabaseTestDataSource</dataSourceClass>
				<args>
					<arg>jdbc:mysql://localhost/globaldb</arg>
					<arg>com.mysql.jdbc.Driver</arg>
					<arg>root</arg>
					<arg></arg>
				</args>
			</gatf-testdata-source>
		</dataSourceList>
		<providerTestDataList>
			<gatf-testdata-provider>
				<enabled>true</enabled>
				<providerClass>com.gatf.executor.dataprovider.FileTestDataProvider</providerClass>
				<providerName>file-auth-provider</providerName>
				<providerProperties>username,password</providerProperties>
				<args>
					<arg>authfile.csv</arg>
					<arg>csv</arg>
				</args>
			</gatf-testdata-provider>
			<gatf-testdata-provider>
				<enabled>true</enabled>
				<providerClass>com.gatf.executor.dataprovider.RandomValueTestDataProvider</providerClass>
				<providerName>random-auth-provider</providerName>
				<providerProperties>username,password</providerProperties>
				<args>
					<arg>alpha,alphanum</arg>
					<arg>5</arg>
				</args>
			</gatf-testdata-provider>
			<gatf-testdata-provider>
				<enabled>true</enabled>
				<providerClass>com.gatf.executor.dataprovider.InlineValueTestDataProvider</providerClass>
				<providerName>inline-auth-provider</providerName>
				<providerProperties>username,password</providerProperties>
				<args>
					<arg>user1,pass1</arg>
					<arg>user2,pass2</arg>
				</args>
			</gatf-testdata-provider>
			<gatf-testdata-provider>
				<enabled>true</enabled>
				<dataSourceName>database-source</dataSourceName>
				<providerName>db-auth-provider</providerName>
				<providerProperties>username,password</providerProperties>
				<queryStr>SELECT USER_NAME,PASSWORD FROM BASE_USER</queryStr>
			</gatf-testdata-provider>
			<gatf-testdata-provider>
				<enabled>true</enabled>
				<dataSourceName>mongodb-source</dataSourceName>
				<providerName>mongo-auth-provider</providerName>
				<args>
					<arg>User</arg>
				</args>
				<queryStr>{"status": "ACTIVE"}</queryStr>
				<sourceProperties>userName,password</sourceProperties>
				<providerProperties>username,password</providerProperties>
			</gatf-testdata-provider>
		</providerTestDataList>
		<dataSourceHooks>
			<gatf-testdata-source-hook>
				<hookName>mongo-startup-hook</hookName>
				<dataSourceName>mongodb-source</dataSourceName>
				<queryStr>db.AuditRecord.remove()</queryStr>
				<executeOnStart>true</executeOnStart>
			</gatf-testdata-source-hook>
			<gatf-testdata-source-hook>
				<hookName>db-startup-hook</hookName>
				<dataSourceName>database-source</dataSourceName>
				<queryStr>delete from balance</queryStr>
				<executeOnStart>true</executeOnStart>
			</gatf-testdata-source-hook>
		</dataSourceHooks>
	</gatfTestDataConfig>
</gatf-execute-config>